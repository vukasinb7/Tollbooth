<Window x:Class="TollStationSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TollStationSystem"
        mc:Ignorable="d"
        Title="MainWindow" Height="192" Width="423" FontSize="15" FontWeight="Bold">
    <Grid>
        <Button x:Name="loginBtn" Content="Login" HorizontalAlignment="Left" Margin="111,106,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.518,0.204" Height="32" Width="266" Click="LoginBtn_Click"/>
        <TextBox x:Name="usernameTb"  HorizontalAlignment="Left" Margin="111,27,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="266" Height="24" FontWeight="Normal"/>
        <PasswordBox x:Name="passwordTb" HorizontalAlignment="Left" Margin="111,60,0,0" VerticalAlignment="Top" Width="266" Height="24" FontWeight="Normal"/>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="10,21,0,0" VerticalAlignment="Top"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="10,57,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
